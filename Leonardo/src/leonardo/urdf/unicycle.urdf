<?xml version="1.0"?>
<robot name="unicycle">

  <!-- Corpo parallelepipedo -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.25 0.17 0.15"/> <!-- LxWxH -->
      </geometry>
      <origin xyz="0.04 0 0.10" rpy="0 0 0"/> <!-- 2.5 cm + metÃ  altezza = 10 cm -->
      <material name="semi_black">
        <color rgba="0 0 0 0.75"/> <!-- trasparente -->
      </material>
    </visual>
  </link>

  <!-- Ruota sinistra -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.035"/>
      </geometry>
      <origin xyz="0.00 0.085 0.035" rpy="1.5708 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Ruota destra -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.035"/>
      </geometry>
      <origin xyz="0.00 -0.085 0.035" rpy="1.5708 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Sfera frontale -->
  <link name="front_ball">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <origin xyz="0.13 0 0.03" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Giunti fissi -->
  <joint name="left_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="right_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="front_ball_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_ball"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>

